view{
  box-sizing: border-box;
}
.search_bar {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 10rpx;
  text-align: center;
  margin: 18rpx auto;
  color: #666;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main{
  height: 100vh;
}
.search_bar_con {
  position: relative;
}

.search_bar_con::after {
  content: "";
  left: -38rpx;
  top: 8rpx;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png') center no-repeat;
  background-size: 100%;
}
.home_banner{
  height: 416rpx;
}
.banner_img{
  width: 100%;
  height: 416rpx;
}
.home_cate{
  display: flex;
  height: 180rpx;
  justify-content: space-around;
  align-items: center;
}
.home_cate_item {
  width: 20%;
  display: flex;
  flex-direction: column;
  text-align:center;
}
.home_brand_item:nth-child(2n+1){
  border-right: 1rpx solid #fff;
}.home_cate_item image {
  width: 58rpx;
  height: 58rpx;
  background: #ccc;
  margin: 0 auto;
}
.home_cate_item text {
  font-size: 24rpx;
  color: #333;
}
.grap{
  height: 20rpx;
  width: 100%;
  background-color: #f4f4f4;
}
.home_brand_title{
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home_brand_list {
  display: flex;
  flex-wrap: wrap ;
}
.home_brand_item{
  position: relative;
  float: left;
  width: 374rpx;
  height: 252rpx;
  overflow: hidden;
  border-top: 1rpx solid #fff;
  margin-left: 1rpx;
}
.home_brand_item image {
  position: relative;
  top: 0;
  left:0;
  width: 374rpx;
  height: 253rpx;
}
.home_brand_drc{
  padding: 28rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.home_brand_desc_title{
  display: block;
  color: #333;
  font-size: 33rpx;
}
.home_brand_desc_price{
  display: block; 
  color: #999;
  font-size: 25rpx;
}
.home_new_list{
  display: flex;
  flex-wrap: wrap;
}
.home_new_item {
  width: 50%;
  padding: 10rpx 21rpx 10rpx 21rpx;
  display: flex;
  flex-wrap: wrap;
}
.home_new_item image {
  width: 302rpx;
  height: 302rpx;
}
.home_new_desc_title{
  text-align: center;
  display: block;
  width: 302rpx;
  margin-bottom: 14rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home_new_desc_price{
  display: block;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}
.home_popularity_item{
  border-top: 1px solid #d9d9d9;
  margin: 0 20rpx;
}
.home_popularity_right{
  height: 264rpx;
  width: 456rpx;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  justify-content: center;
}
.home_popularity_img{
  margin-top: 12rpx;
    margin-right: 12rpx;
    float: left;
    width: 240rpx;
    height: 240rpx;
}
.home_popularity_details{
  width: 456rpx;
  display: block;
  color: #999;
  line-height: 50rpx;
  font-size: 25rpx;
}
.home_popularity_desc_price{
  display: block;
    text-align: left;
    line-height: 30rpx;
    font-size: 30rpx;
    color: #b4282d;
}
.special_desc{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.special_list{
  margin: 0 30rpx;
  width: 750rpx;
  white-space: nowrap;
}
.special_img{
  height: 387.5rpx;
  width: 680.5rpx;
  margin-bottom: 30rpx;
}
.special_list .special_item:last-child{
  margin-right: 30rpx;
}
.special_item{
  display: inline-block;
  height: 533rpx;
  width: 680.5rpx;
  margin-left: 30rpx;
  overflow: hidden;
}
.home_special_desc_title{
  display: inline-block;
  width: 358rpx;
  height: 35rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home_special_desc_price{
    display: inline-block;
    text-align: left;
    font-size: 29rpx;
    color: #b4282d;
}
.home_special_desc_details{
  display: block;
  width: 500rpx;
  height: 30rpx;
  color: #999;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}