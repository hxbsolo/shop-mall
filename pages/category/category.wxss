.container{
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  background: #f9f9f9;
}
.category_nav{
  display: inline-block;
  height: 84rpx;
  min-width: 130rpx;
  padding: 0 15rpx;
}
.category_nav_text{
  display: block;
  height: 84rpx;
  padding: 0 20rpx;
  line-height: 84rpx;
  color: #333;
  font-size: 30rpx;
  width: auto;
}
.nav_scroll{
  width: 750rpx;
  height: 84rpx;
    white-space: nowrap;
    background: #fff;
    border-top: 1px solid rgba(0,0,0,.15);
    overflow: hidden;
}
.nav_actived{
  color: #ab2b2b;
  border-bottom: 2px solid #ab2b2b;
}
.switch_nav{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
}
.category{
  margin-top: 94rpx;
  height: auto;
  overflow: hidden;
}
.cate_title{
  height: 145rpx;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.name{
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 36rpx;
  color: #333;
}
.front{
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}
.cate_list{
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}
.cate_item{
  float: left;
  background: #fff;
  width: 365rpx;
  margin-bottom: 6.25rpx;
  padding-bottom: 33.333rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}
.cate_image{
  width: 302rpx;
  height: 302rpx;
}
.cate_item_name{
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 11.5rpx 0 22rpx 0;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}
.cate_item_price{
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}