.search_bar {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 10rpx;
  text-align: center;
  margin: 18rpx auto;
  color: #666;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_bar_con {
  position: relative;
}

.nav_right {
  width: 162rpx;
  height: 100%;
}

.silde_item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.item_actived {
  color: #ab2b2b;
  font-size: 36rpx;
  border-left: 6rpx solid #ab2b2b;
}

.catlog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}
.banner{
  display: block;
  height: 222rpx;
  width: 100%;
  position: relative;
}

.banner image {
  position: absolute;
    top: 30rpx;
    left: 0;
    border-radius: 4rpx;
    height: 192rpx;
    width: 100%;
}
.banner text {
  position: absolute;
    top: 30rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    left: 0;
    height: 192rpx;
    line-height: 192rpx;
    width: 100%;
}
.calog_title{
  height: 108rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.line{
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}
.text{
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 0 10rpx;
  width: auto;
}
.catlog_list{
  height: auto;
    width: 100%;
    overflow: hidden;
}
.catlog_item{
  display: block;
  float: left;
  height: 216rpx;
  width: 144rpx;
  margin-right: 34rpx;
}
.catlog_image{
  height: 144rpx;
  width: 144rpx;
}
.catlog_text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  height: 72rpx;
  width: 144rpx;
}
.cate{
  border-left: 1px solid #fafafa;
    flex: 1;
    height: 100%;
    padding: 0 26rpx;
}