<view class="">
    <!-- 轮播图 -->
    <swiper class="details_swiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000" circular='true'>
        <swiper-item class="details_swiper_item" item-id="" wx:for="{{detail.gallery}}">
            <image class="details_item_image" src="{{item.img_url}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false"></image>
        </swiper-item>
    </swiper>
    <!-- 快递 -->
    <view class="service-policy">
        <view class="policy_item">30天无忧退货</view>
        <view class="policy_item">48小时快速退款</view>
        <view class="policy_item">满88元免邮费</view>
    </view>
    <!-- 标题 -->
    <view class="goods_info">
        <view class="infos">
            <text class="name">{{detail.info.name}}</text>
            <text class="desc">{{detail.info.goods_brief}}</text>
            <text class="price">{{detail.info.retail_price}}</text>
        </view>
    </view>
    <!-- 添加 -->
    <view class="switchAttrPop" bindtap="setAttrPop">
        <view class="switch_t" bindtap="setAttrPop">请选择规格参数</view>
        <image bindtap="setAttrPop" class="switch_image" src="../../static/images/address_right.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""></image>
    </view>
    <!-- 评论 -->
    <!-- 商品参数 -->
    <view class="shop_details">
        <view class="shop-dt" hover-class="none" hover-stop-propagation="false">商品参数</view>
        <view class="lab" hover-class="none" hover-stop-propagation="false">
            <view class="lab_item" hover-class="none" hover-stop-propagation="false" wx:for="{{detail.attribute}}">
                <text class="left">{{item.name}}</text>
                <text class="right">{{item.value}}</text>
            </view>
        </view>
    </view>
    <view class="show_details">
        <import src="../../lib/wxParse/wxParse.wxml" />
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
    <!-- 相关联商品 -->
    <view class="related-goods" wx:if="{{goodslist.length > 0}}">
        <view class="h">
            <view class="line"></view>
            <text class="title">大家都在看</text>
        </view>
        <view class="b">
            <view class="item" wx:for="{{goodslist}}" wx:key="{{item.id}}">
                <navigator url="/pages/goods/goods?id={{item.id}}">
                    <image class="img" src="{{item.list_pic_url}}" background-size="cover"></image>
                    <text class="name">{{item.name}}</text>
                    <text class="price">￥{{item.retail_price}}</text>
                </navigator>
            </view>
        </view>
    </view>
    <!-- 添加购物车 -->
    <view class="bottom-btn">
        <view class="l l-collect" bindtap="addCannelCollect">
            <image class="icon" src="/static/images/icon_collect.png"></image>
        </view>
        <navigator class="l l-cart" open-type="switchTab" url="/pages/cart/cart">
            <view class="box">
                <text class="cart-count">{{cartGoodsCount}}</text>
                <image bindtap="openCartPage" class="icon" src="/static/images/ic_menu_shoping_nor.png"></image>
            </view>
        </navigator>
        <view class="c">立即购买</view>
        <view class="r" bindtap="addToCart">加入购物车</view>
    </view>
    <!-- 添加弹窗 -->
    <view class="attr-pop-box" hidden="{{!openAttr}}">
        <view class="attr-pop">
            <view class="close" bindtap="closeAttr">
                <image class="icon" src="/static/images/icon_close.png"></image>
            </view>
            <view class="img-info">
                <image class="img" src="{{detail.gallery[0].img_url}}"></image>
                <view class="info">
                    <view class="c">
                        <view class="p">价格：{{detail.info.retail_price}}</view>
                        <view class="a" wx:if="{{detail.productList.length>0}}">
                            已选择：{{checkedSpecText}}
                        </view>
                    </view>
                </view>
            </view>
            <view class="spec-con">
                <view class="spec-item" wx:for="{{specificationList}}" wx:key="{{item.specification_id}}">
                    <view class="name">{{item.name}}</view>
                    <view class="values">
                        <view class="value {{vitem.checked ? 'selected' : ''}}" bindtap="clickSkuValue" wx:for="{{item.valueList}}" wx:for-item="vitem" wx:key="{{vitem.id}}" data-value-id="{{vitem.id}}" data-name-id="{{vitem.specification_id}}">
                            {{vitem.value}}
                        </view>
                    </view>
                </view>
                <view class="number-item">
                    <view class="name">数量</view>
                    <view class="selnum">
                        <view class="cut {{number == 1?'cutived':''}}" bindtap="cutNumber">-</view>
                        <input value="{{number}}" class="number" disabled="true" type="number" />
                        <view class="add" bindtap="addNumber">+</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>