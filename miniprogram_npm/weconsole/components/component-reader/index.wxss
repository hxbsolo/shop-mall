.fc-reader {
  position: relative;
  z-index: 5;
  height: 100%;
  background-color: #fff;
}

.fc-reader-detail-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 30%;
  z-index: 10;
  display: block;
  background-color: #fff;
}

.fc-reader-detail-container.has-bar {
  top: 60rpx;
}

.fc-reader-detail-container .fc-reader-detail-scroll {
  height: 100%;
}

.fc-reader-body {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 5;
}

.fc-reader-body.has-bar {
  top: 60rpx;
}

.fc-headers-item {
  padding: 8rpx 10rpx;
  font-family: consolas, menlo, monaco, "Courier New", monospace;
  font-size: 24rpx;
  line-height: 1.6;
  color: #545454;
}

.fc-headers-item:active {
  color: #fff !important;
  background-color: #1b9af7;
}

.fc-headers-hr {
  margin: 6rpx 0;
  border-bottom: 1px solid #ccc;
}

.fc-headers-name {
  font-family: system-ui, consolas, menlo, monaco, Courier New, monospace;
  font-weight: bold;
}

.fc-headers-name::after {
  display: inline;
  margin-right: 8rpx;
  margin-left: 2rpx;
  content: ':';
}

.fc-headers-remark {
  display: inline;
  font-size: 20rpx;
  opacity: 0.7;
}

.fc-headers-name,
.fc-headers-key,
.fc-headers-val {
  display: inline;
  word-break: break-all;
  white-space: normal;
}

.wc-elements {
  box-sizing: border-box;
  height: 100%;
  padding: 0 20rpx;
}

.action-bar {
  position: relative;
  height: 50rpx;
  border-bottom: 1px solid #ccc;
}

.fc-detail-close {
  position: relative;
  width: 22.72727rpx;
  height: 22.72727rpx;
}

.fc-detail-close::before, .fc-detail-close::after,
.fc-detail-close .wic-arrow-1,
.fc-detail-close .wic-arrow-2 {
  position: absolute;
  box-sizing: border-box;
  content: '';
}

.fc-detail-close.wic-close::before, .fc-detail-close.wic-close::after {
  top: 50%;
  width: 100%;
  height: 4rpx;
  margin-top: -2rpx;
  background-color: #5e5e5e;
}

.fc-detail-close.wic-close::before {
  transform: rotate(45deg);
}

.fc-detail-close.wic-close::after {
  transform: rotate(135deg);
}

.fc-reader-detail {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 30%;
  background-color: #fff;
  border-left: 2px solid #ccc;
}

.detail-scroll {
  position: absolute;
  top: 50rpx;
  right: 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
}

.fc-detail-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  color: #616161;
}

.fc-headers-item {
  padding-right: 20rpx;
  padding-left: 20rpx;
}

.fc-detail-action {
  position: absolute;
  z-index: 5;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
}

.fc-detail-action::after {
  position: absolute;
  top: 10rpx;
  right: 0;
  bottom: 10rpx;
  width: 1rpx;
  content: '';
  background-color: #ccc;
}

.detail-label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 50rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #424242;
}

.death-tip {
  padding: 15rpx;
  margin-bottom: 15rpx;
  font-size: 20rpx;
  color: #8a6d3b;
  text-align: center;
  background-color: #fcf8e3;
  border-bottom: 1px solid #faebcc;
}
