.fc-reader {
  position: relative;
  z-index: 5;
  height: 100%;
  background-color: #fff;
}

.fc-reader-detail-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 30%;
  z-index: 10;
  display: block;
  background-color: #fff;
}

.fc-reader-detail-container.has-bar {
  top: 60rpx;
}

.fc-reader-detail-container .fc-reader-detail-scroll {
  height: 100%;
}

.fc-reader-body {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 5;
}

.fc-reader-body.has-bar {
  top: 60rpx;
}

.fc-detail {
  display: block;
  height: 100%;
  background-color: #fff;
  border-left: 2px solid #ccc;
}

.fc-detail.fc-status-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12rpx;
  color: #999;
}

.fc-detail.fc-status-container .fc-status-action {
  margin-top: 15rpx;
}

.btn-link {
  font-size: inherit;
  color: #1a73ea;
  text-decoration: underline;
}

.fc-detail-close {
  position: relative;
  width: 22.72727rpx;
  height: 22.72727rpx;
}

.fc-detail-close::before, .fc-detail-close::after,
.fc-detail-close .wic-arrow-1,
.fc-detail-close .wic-arrow-2 {
  position: absolute;
  box-sizing: border-box;
  content: '';
}

.fc-detail-close.wic-close::before, .fc-detail-close.wic-close::after {
  top: 50%;
  width: 100%;
  height: 4rpx;
  margin-top: -2rpx;
  background-color: #5e5e5e;
}

.fc-detail-close.wic-close::before {
  transform: rotate(45deg);
}

.fc-detail-close.wic-close::after {
  transform: rotate(135deg);
}

.fc-detail-action {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 50rpx;
  height: 50rpx;
}

.fc-detail-action.absolute {
  position: absolute;
  z-index: 5;
}

.fc-detail-action.right-border::after {
  position: absolute;
  top: 10rpx;
  right: 0;
  bottom: 10rpx;
  width: 1rpx;
  content: '';
  background-color: #ccc;
}

.btn-link {
  top: 0;
  right: 15rpx;
  font-size: 80%;
}

.progress-bar {
  position: relative;
  min-width: 224rpx;
  height: 44rpx;
  margin: 0 5rpx;
  overflow: hidden;
  background-color: #cdcdcd;
  border-radius: 8rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-bar.warn .progress-val {
  background-color: #f0ad4e;
}

.progress-bar.danger .progress-val {
  background-color: #d9534f;
}

.progress-val {
  height: 100%;
  background-color: #5cb85c;
}

.progress-text {
  position: absolute;
  top: 6rpx;
  left: 10rpx;
}
