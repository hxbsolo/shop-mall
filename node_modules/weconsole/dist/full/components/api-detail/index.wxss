.fc-headers-item {
  padding: 8rpx 10rpx;
  font-family: consolas, menlo, monaco, "Courier New", monospace;
  font-size: 24rpx;
  line-height: 1.6;
  color: #545454;
}

.fc-headers-item:active {
  color: #fff !important;
  background-color: #1b9af7;
}

.fc-headers-hr {
  margin: 6rpx 0;
  border-bottom: 1px solid #ccc;
}

.fc-headers-name {
  font-family: system-ui, consolas, menlo, monaco, Courier New, monospace;
  font-weight: bold;
}

.fc-headers-name::after {
  display: inline;
  margin-right: 8rpx;
  margin-left: 2rpx;
  content: ':';
}

.fc-headers-remark {
  display: inline;
  font-size: 20rpx;
  opacity: 0.7;
}

.fc-headers-name,
.fc-headers-key,
.fc-headers-val {
  display: inline;
  word-break: break-all;
  white-space: normal;
}

.fc-detail {
  display: block;
  height: 100%;
  background-color: #fff;
  border-left: 2px solid #ccc;
}

.fc-detail.fc-status-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12rpx;
  color: #999;
}

.fc-detail.fc-status-container .fc-status-action {
  margin-top: 15rpx;
}

.btn-link {
  font-size: inherit;
  color: #1a73ea;
  text-decoration: underline;
}

.fc-detail-close {
  position: relative;
  width: 22.72727rpx;
  height: 22.72727rpx;
}

.fc-detail-close::before, .fc-detail-close::after,
.fc-detail-close .wic-arrow-1,
.fc-detail-close .wic-arrow-2 {
  position: absolute;
  box-sizing: border-box;
  content: '';
}

.fc-detail-close.wic-close::before, .fc-detail-close.wic-close::after {
  top: 50%;
  width: 100%;
  height: 4rpx;
  margin-top: -2rpx;
  background-color: #5e5e5e;
}

.fc-detail-close.wic-close::before {
  transform: rotate(45deg);
}

.fc-detail-close.wic-close::after {
  transform: rotate(135deg);
}

.fc-detail-action {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 50rpx;
  height: 50rpx;
}

.fc-detail-action.absolute {
  position: absolute;
  z-index: 5;
}

.fc-detail-action.right-border::after {
  position: absolute;
  top: 10rpx;
  right: 0;
  bottom: 10rpx;
  width: 1rpx;
  content: '';
  background-color: #ccc;
}

.fc-status-success {
  color: green !important;
}

.fc-status-error {
  color: #f00 !important;
}

.fc-table-container {
  padding: 15rpx;
}

.fc-table {
  display: table;
  width: 100%;
  font-size: 20rpx;
  color: #5e5e5e;
  border-collapse: collapse;
  border: 1px solid #ccc;
}

.fc-table-tr {
  display: table-row;
}

.fc-table-tr-even {
  background-color: #fff;
}

.fc-table-tr-odd {
  background-color: #f5f5f5;
}

.fc-table-th,
.fc-table-td {
  display: table-cell;
  padding: 6rpx;
  word-break: break-all;
  white-space: normal;
  border-right: 1px solid #ccc;
}

.fc-table-th {
  font-size: 22rpx;
  background-color: #f3f3f3;
  border-bottom: 1px solid #ccc;
}

.fc-detail-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  color: #616161;
}

.collapse-action {
  margin-right: 20rpx;
  font-size: 20rpx;
  font-weight: normal;
}

.detail-tab-plc {
  height: 20rpx;
}

.detail-tab-panel {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.wc-link {
  margin: 0 20rpx;
  font-size: 80%;
  font-weight: normal;
  color: #1b9af7;
}
