.fc-headers-item {
  padding: 8rpx 10rpx;
  font-family: consolas, menlo, monaco, "Courier New", monospace;
  font-size: 24rpx;
  line-height: 1.6;
  color: #545454;
}

.fc-headers-item:active {
  color: #fff !important;
  background-color: #1b9af7;
}

.fc-headers-hr {
  margin: 6rpx 0;
  border-bottom: 1px solid #ccc;
}

.fc-headers-name {
  font-family: system-ui, consolas, menlo, monaco, Courier New, monospace;
  font-weight: bold;
}

.fc-headers-name::after {
  display: inline;
  margin-right: 8rpx;
  margin-left: 2rpx;
  content: ':';
}

.fc-headers-remark {
  display: inline;
  font-size: 20rpx;
  opacity: 0.7;
}

.fc-headers-name,
.fc-headers-key,
.fc-headers-val {
  display: inline;
  word-break: break-all;
  white-space: normal;
}

.fc-collapse {
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.fc-collapse.is-open {
  height: auto;
}

.fc-collapse.is-open .fc-collapse-head::before {
  content: '';
  transform: rotate(90deg) translateX(4rpx) translateY(8rpx);
}

.fc-collapse-head {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  font-family: system-ui, consolas, menlo, monaco, Courier New, monospace;
  font-size: 26rpx;
  color: #616161;
}

.fc-collapse-head::before {
  position: relative;
  top: 0;
  display: block;
  margin-left: -15rpx;
  content: '';
  border-color: transparent;
  border-style: solid;
  border-width: 8rpx 10rpx;
  border-left-color: #5e5e5e;
  transition: all 0.3s;
}
