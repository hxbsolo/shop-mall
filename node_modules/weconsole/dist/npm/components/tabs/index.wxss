.fc-tabs {
  position: relative;
  z-index: 5;
  overflow: hidden;
}

.fc-tabs.body-fill {
  width: 100%;
  height: 100%;
}

.fc-tabs.fc-size-small .fc-tabs-head {
  height: 50rpx;
}

.fc-tabs.fc-size-small .fc-tab-title {
  height: 50rpx;
  padding: 0 15rpx;
  font-size: 22rpx;
  line-height: 50rpx;
}

.fc-tabs.fc-size-small .fc-tabs-body {
  top: 50rpx !important;
}

.fc-tabs.json-tabs .fc-tabs-head {
  background-color: transparent;
}

.fc-tabs-head {
  position: relative;
  z-index: 10;
  display: flex;
  flex-wrap: nowrap;
  color: #5e5e5e;
  background: #f3f3f3;
}

.fc-tabs-heads {
  display: flex;
  flex-wrap: nowrap;
}

.fc-tab-title {
  box-sizing: border-box;
  flex-shrink: 0;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
}

.fc-tabs-horizontal .fc-tabs-head-scroll {
  flex-basis: auto;
  flex-grow: 0;
  flex-shrink: 1;
  overflow: hidden;
}

.fc-tabs-horizontal .fc-tabs-head-before,
.fc-tabs-horizontal .fc-tabs-head-after {
  flex-shrink: 0;
}

.fc-tabs-horizontal .fc-tabs-head {
  height: 70rpx;
  border-bottom: 1px solid #ccc;
}

.fc-tabs-horizontal .fc-tab-title {
  border-bottom: 6rpx solid transparent;
  transition: border-color 0.5s;
}

.fc-tabs-horizontal .fc-tab-title.active {
  border-bottom-color: #1b9af7;
}

.fc-tabs-horizontal.body-fill .fc-tabs-body {
  position: absolute;
  top: 70rpx;
  right: 0;
  bottom: 0;
  left: 0;
}

.fc-tabs-horizontal .fc-tab-panels {
  flex-direction: row;
}

.fc-tabs-horizontal .fc-tab-panel {
  width: 100%;
  overflow: hidden;
}

.fc-tabs-vertical .fc-tabs-head-scroll {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
}

.fc-tabs-vertical .fc-tabs-head,
.fc-tabs-vertical .fc-tabs-body {
  top: 0;
  bottom: 0;
}

.fc-tabs-vertical .fc-tabs-head {
  left: 0;
  flex-direction: column;
  width: 30%;
  border-right: 1px solid #ccc;
}

.fc-tabs-vertical .fc-tabs-body {
  left: 30%;
  width: 70%;
}

.fc-tabs-vertical .fc-tabs-heads {
  flex-direction: column;
}

.fc-tabs-vertical .fc-tab-title {
  background-color: transparent;
  transition: background-color 0.5s;
}

.fc-tabs-vertical .fc-tab-title.active {
  background-color: #1b9af7;
}

.fc-tabs-vertical .fc-tab-panels {
  flex-direction: column;
}

.fc-tab-panels {
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
  transition: transform 0.5s;
}

.fc-tab-panels .fc-tab-panel {
  position: relative;
  box-sizing: border-box;
  flex: 1;
  flex-shrink: 0;
}
