@charset "UTF-8";
.fc-reader {
  position: relative;
  z-index: 5;
  height: 100%;
  background-color: #fff;
}

.fc-reader-detail-container {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 30%;
  z-index: 10;
  display: block;
  background-color: #fff;
}

.fc-reader-detail-container.has-bar {
  top: 60rpx;
}

.fc-reader-detail-container .fc-reader-detail-scroll {
  height: 100%;
}

.fc-reader-body {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 5;
}

.fc-reader-body.has-bar {
  top: 60rpx;
}

.vl-scroller {
  z-index: 1;
  height: 100%;
}

.console-row {
  position: relative;
  padding: 5rpx 15rpx 5rpx 50rpx;
  margin-top: -1px;
  font-size: 0;
  color: #5e5e5e;
  letter-spacing: 0;
  background-color: #fff;
  border-top: 1px solid #f3f3f3;
  border-bottom: 1px solid #f3f3f3;
}

.console-row.is-warn {
  color: #ffa400;
  background-color: #fff3e0;
  border-top-color: #f7e9a3;
  border-bottom-color: #f7e9a3;
}

.console-row.is-error {
  color: #f00;
  background-color: #fff0f0;
  border-top-color: #ffd6d6;
  border-bottom-color: #ffd6d6;
}

.console-row.wc-selected {
  position: relative;
  background-color: #ebf5fb;
}

.console-row.wc-selected::after {
  position: absolute;
  right: 0;
  bottom: -1px;
  left: 0;
  z-index: 5;
  height: 1px;
  content: '';
}

.console-row.wc-selected.is-error::after {
  background-color: #ffd6d6;
}

.console-row.wc-selected.is-warn::after {
  background-color: #f7e9a3;
}

.console-row.wc-selected.is-info::after, .console-row.wc-selected.is-log::after {
  background-color: #ccdef5;
}

.console-row.wc-selected.is-log, .console-row.wc-selected.is-info {
  border-top-color: #ccdef5;
  border-bottom-color: #ccdef5;
}

.console-row.single-item .console-json {
  display: block;
  margin-left: 0;
}

.console-wic {
  position: relative;
  position: absolute;
}

.console-wic::before, .console-wic::after,
.console-wic .wic-arrow-1,
.console-wic .wic-arrow-2 {
  position: absolute;
  box-sizing: border-box;
  content: '';
}

.console-wic.wic-error {
  top: 13rpx;
  left: 18rpx;
  width: 16rpx;
  height: 16rpx;
}

.console-wic.wic-error::before, .console-wic.wic-error::after {
  z-index: 2;
}

.console-wic.wic-error .wic-arrow-1 {
  top: -4rpx;
  left: -4rpx;
  z-index: 1;
  width: 24rpx;
  height: 24rpx;
  background-color: #f00;
  border-radius: 50%;
}

.console-wic.wic-error::before, .console-wic.wic-error::after {
  top: 50%;
  width: 100%;
  height: 4rpx;
  margin-top: -2rpx;
  background-color: #fff;
}

.console-wic.wic-error::before {
  transform: rotate(45deg);
}

.console-wic.wic-error::after {
  transform: rotate(135deg);
}

.console-wic.wic-warn::before {
  top: 0;
  left: 0;
  color: #ffa400;
  content: 'â–²';
}

.console-wic.wic-warn::after {
  top: 50%;
  left: 50%;
  color: #fff;
  content: '!';
  transform: translateX(-50%) translateY(-50%) scale(0.5);
}

.console-wic.wic-warn {
  left: 10rpx;
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 1;
  text-align: center;
}

.fc-br {
  display: block;
}

.console-json,
.console-str {
  font-size: 22rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.console-str,
.console-division {
  display: inline;
}

.console-division {
  padding-left: 16rpx;
}

.console-json {
  display: inline-block;
  min-width: 30%;
}

.fc-scroll {
  position: absolute;
  top: 60rpx;
  right: 0;
  bottom: 0;
  left: 0;
}

.console-affixs {
  position: relative;
  z-index: 8;
  max-height: 30%;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
  box-shadow: 0 8rpx 8rpx rgba(0, 0, 0, 0.1);
}
